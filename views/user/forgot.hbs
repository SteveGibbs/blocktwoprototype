{{> plain-header}}

<main class="mdl-layout__content">
    <div class="page-content">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--2-col">2</div>
            <div class="mdl-cell mdl-cell--4-col">4</div>
            <div class="mdl-cell mdl-cell--6-col">
                <h3>Forgot Password</h3>
                {{#if hasErrors}}
                    <div class="alert alert-danger">
                        {{# each messages}}
                            <p>{{this}}</p>
                        {{/each}}
                    </div>
                {{/if}}
                <form action="/user/forgot" method="post">
                    <div class="form-group">
                        <label for="email">EMAIL</label>
                        <br>
                        <input type="text" id="email" name="email" placeholder="Email" class="mdl-button block-button">
                    </div>

                        <br>
                        <br>
                        <button type="submit" class="block2-btn-primary">Reset Password</button>
                </form>

            </div>
        </div>

        <!-- Your content goes here -->
    </div>
</main>

<!-- this final div closes off the div started in the header.hbs -->
</div>