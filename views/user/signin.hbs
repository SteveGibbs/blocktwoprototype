{{> plain-header}}

<main class="mdl-layout__content">
    <div class="page-content">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col">
                <img src="../images/resources/automotive-car-car-engine-1409999.jpg" alt="" class="image-crop-half">
            </div>

            <div class="mdl-cell mdl-cell--6-col">
                <div class="ml100">

                <h3>Sign In</h3>
                {{#if hasErrors}}
                    <div class="alert alert-danger">
                        {{# each messages}}
                            <p>{{this}}</p>
                        {{/each}}
                    </div>
                {{/if}}
                <form action="/user/signin" method="post">
                    <div class="form-group">
                        <label for="email">EMAIL</label>
                        <br>
                        <input type="text" id="email" name="email" placeholder="&#xE7FD; Email" class="mdl-button block-button">
                    </div>
                    <div class="form-group">
                        <label for="password">PASSWORD</label>
                        <br>
                        <input type="password" id="password" name="password" placeholder="Password" class="mdl-button block-button">
                    </div>
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <br>
                        <br>
                        <br>
                        <button type="submit" class="block2-btn-primary">Sign in</button>
                </form>
                <br>
                <br>
                <p>
                    Don't have an account? <a href="/user/signup">  Sign Up instead</a>
                </p>
                <p>
                    <a href="/user/forgot">Forgot Password?</a>
                </p>
                <div class="hidden">
                    This is the csrfToken - {{csrfToken}}
                </div>
                </div>

            </div>
        </div>

        <!-- Your content goes here -->
    </div>
</main>

<!-- this final div closes off the div started in the header.hbs -->
</div>